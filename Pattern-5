for n=4;
----------------------------------------------------------------------------------


#include <iostream>
using namespace std;

int main()
{
    //std::cout<<"Hello World";
    int n;
    cin>>n;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=i;j++){
            cout<<"*";
        }
        cout<<endl;
    }
    for(int i=1;i<n;i++){
        for(int j=1;j<=n-i;j++){
            cout<<"*";
        }
        cout<<endl;
    }

    return 0;
}
