#include<iostream>
using namespace std;
int main(){
int n;
cin>>n;
int arr[n];
int odd=0,even=0;
for(int i=0;i<n;i++){
cin>>arr[i];
if(arr[i]%2==0{// inportnat condition to determine whether the element is odd or even 
even++; if it is even increment the even count.
}
else{
odd++; if it is not even it will increment the odd count
}
}
return 0;
}
